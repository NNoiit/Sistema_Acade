@model AlunoModels
@using sistemaAcad.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    if(Context.Request.RouteValues.ContainsKey("id")){

        ViewBag.Subtitulo = "Alteração de Aluno";
    }else{

        ViewBag.Subtitulo = "Cadastro de Nova Aluno";
    }
}


<h1>@ViewBag.Subtitulo</h1>
    
<hr>

<form asp-action = "Cadastrar">

    <input type="hidden" asp-for="@Model.IdAluno">
    <div class="form-grup row">
        <label asp-for="@Model.Nome">Nome:</label><br>
        <input asp-for = "@Model.Nome" class="form-control" autofocus>
        <span asp-validation-for="@Model.Nome" class="text-danger"></span>
    </div>
    
    <div class="w-100"></div>
    <div class="form-grup row">
        <label asp-for="@Model.Email">Email:</label><br>
        <input asp-for = "@Model.Email" class="form-control">
        <span asp-validation-for="@Model.Email" class="text-danger"></span>
    </div>

    <div class="w-100"></div>
    <div class="form-grup row">
        <label asp-for="@Model.IdTurma">Turma:</label><br>
        <select asp-for = "@Model.IdTurma" class="form-control" asp-items="@(IEnumerable<SelectListItem>)ViewBag.Turma"></select>
        <span asp-validation-for="@Model.IdTurma" class="text-danger"></span>
    </div>

    <div class="mt-3">
        <a asp-action = "Index_Aluno" class="btn btn-outline-secondary">Cancelar</a>
        <button class= "btn btn-outline-info" type="submit">Salvar</button>
    </div>
</form>