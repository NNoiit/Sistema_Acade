@model ProfessorModels
@using sistemaAcad.Models
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewBag.Subtitulo = "Exclusão de Professor";
}

<h1>@ViewBag.Subtitulo</h1>
<hr>
<h3>Deseja preceguir com a excluão da Professor @Model.Nome?</h3>

<form asp-action = "Excluir" class="w-25">
    <input type="hidden" asp-for = "@Model.IdProfessor">
    <div class="mt-3">
        <a asp-action="Index" class="btn btn-success">Não</a>
        <button class="btn btn-danger" title="submit">Sim</button>
    </div>
</form>
